{
  "name": "vite-multi-platform-test",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Production-like test app for Springboard with Vite - tests multiple platforms",
  "scripts": {
    "dev": "vite",
    "dev:browser": "vite --mode browser",
    "build": "npm run build:browser && npm run build:server",
    "build:browser": "vite build --mode browser",
    "build:server": "vite build --mode server",
    "build:partykit": "vite build --mode partykit",
    "preview": "vite preview",
    "test:exports": "node scripts/test-exports.mjs",
    "test:all": "npm run build && npm run test:exports",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "springboard": "0.2.0",
    "@springboardjs/data-storage": "0.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.0.0",
    "hono": "^4.6.0",
    "@hono/node-server": "^1.19.0",
    "rxjs": "^7.8.0",
    "immer": "^10.0.0",
    "json-rpc-2.0": "^1.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.4.0",
    "typescript": "^5.9.0",
    "vite": "^5.4.0",
    "vite-tsconfig-paths": "^5.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
